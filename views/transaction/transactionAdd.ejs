<% include ../include/header.ejs %>
<div class="container">
<h1><%= title %></h1>
    <form class="form-horizontal" name="addform" action="add" method="post" accept-charset="utf-8" enctype="multipart/form-data">
        <div class="form-group">
            <label class="control-label col-sm-2">Gamename：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="gamename" placeholder="gamename" value="<%= name %>" readonly>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Platfrom：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="platform" placeholder="Platform" value="<%= platform %>" readonly>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Price：</label>
            <div class="col-sm-10">
                <input class="form-control" type="number" name="price" placeholder="Price">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Description：</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="6" cols="50" name="description" placeholder="Enter text here..."></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Preferred locations：</label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Kwun Tong Line">Kwun Tong Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Tsuen Wan Line">Tsuen Wan Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Island Line">Island Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="South Island Line">South Island Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Tseung Kwan O Line">Tseung Kwan O Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Tung Chung Line & Disneyland Resort Line">Tung Chung Line and Disneyland Resort Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="East Rail Line">East Rail Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="Ma On Shan Line">Ma On Shan Line</label>
                </div>
                <div class="checkbox">
                    <label><input name="checkbox" type="checkbox" value="West Rail Line">West Rail Line</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">images(max. 5)：</label>
            <div class="col-sm-10">
                <input type="file" name="transactionImages" multiple>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default" type='submit' value='Submit'>Submit</button>
            <button class="btn btn-default" type='reset' value='Reset'>Reset</button>
            <button class="btn btn-default" type='button' value='Back' onclick="javascript: location.href='/'">Back</button>
            </div>
        </div>
    </form>
</div>
<% include ../include/footer.ejs %>