<% include include/header.ejs %>
<h1><%= title %></h1>
<div class="search">
        <label>gamenameï¼š</label>
        <input type="text" name="sgamename" value="" placeholder="input the gamename">
        <input type="button" name="sSearch" value="Search" onclick="Search();">
    </div>
<input type='submit' value='Add' onclick="javascript: location.href='http://localhost:3000/transaction/add'">
    <table>
        <tr>
            <th>tid</th>
            <th>uid</th>
            <th>gamename</th>
            <th>platform</th>
            <th>price</th>
            <th>description</th>
            <th>date</th>
            <th>likes</th>
        </tr>
        <% for ( var i = 0 ; i < data.length ; i++){ %>
            <tr>
                <td>
                    <%= data[i].tid  %>
                </td>
                <td>
                    <%= data[i].id  %>
                </td>
                <td>
                    <%= data[i].gamename  %>
                </td>
                <td>
                    <%= data[i].platform  %>
                </td>
                <td>
                    <%= data[i].price  %>
                </td>
                <td>
                    <%= data[i].description  %>
                </td>
                <td>
                    <%= data[i].date  %>
                </td>
                <td>
                    <%= data[i].likes  %>
                </td>
            </tr>
            <% } %>
    </table>

<% include include/footer.ejs %>

<script>
    function Search() {

        var gamename = document.getElementsByName('sgamename')[0].value;
        window.location.href = "/transaction?gamename=" + gamename;;
    }
</script>