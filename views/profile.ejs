<% include include/header.ejs %>

<div class="page-header text-center">
    <h1><span class="fa fa-check-square"></span> <%= title%></h1>
    
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <center>
                <h3><span class="fa fa-user"></span>user information</h3>
                    
                <%if (user.image==null){%>
                <img id="profile-user-icon" src="/images/users/default.jpg" class="img-responsive img-circle" style="width:25%">
                <% } else {%>
                    <img src="<%= user.image %>" class="img-responsive img-circle" style="width:25%">
                <%}%>
                    <br>
                    <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#upload">Upload Photo</button>
                    <br>
                    <br>
                <p>
                    <strong>Id</strong>: <%= user.id  %>
                    <br>
                    <strong>Username</strong>: <%= user.username  %>
                    <br>
                    <strong>Email</strong>: <%= user.email  %>
                </p>
                <br>
                <h4>Your transaction</h4>
                <table class="table table-hover">
                    <tr >
                        <th>tid</th>
                        <th>Gamename</th>
                        <th>Platform</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                <% for ( var i = 0 ; i < data.length ; i++){ %>
                <tr> 
                    <td>
                        <%= data[i].tid  %>
                    </td>
                    <td>
                        <%= data[i].gamename  %>
                    </td>
                    <td>
                        <%= data[i].platform  %>
                    </td>
                    <td>
                        $<%= data[i].price  %>
                    </td>
                    <td>
                        <%= data[i].date  %>
                    </td>
                    <td>
                        <button class="btn btn-info btn-xs" onclick="window.location.href='/transaction/detail?tid=<%= data[i].tid  %>'">Detail</button>
                    </td>
                </tr>
                <% } %>
                </table>
                </center>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="upload" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <form action="/profile/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="filetoupload"><br>
            <input type="submit">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<% include include/footer.ejs %>