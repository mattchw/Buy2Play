				<div class="col-md-12">
					<div class="section-title">
						<h2 class="title">recently</h2>
						<div class="pull-right">
							<div class="product-slick-dots-1 custom-dots"></div>
						</div>
					</div>
				</div>

				<!-- Product Slick -->
				<div class="col-md-12 col-sm-6 col-xs-6">
					<div class="row">
						<div id="product-slick-1" class="product-slick">
							<!-- Product Single -->
                            <% var num = 9; if(recently.length<9){num = recently.length;}
                            for ( var i = 0 ; i < num ; i++){ %>
                                <div class="product product-single">
                                    <div class="product-thumb">
                                        <div class="product-label">
                                            <span>New</span>
                                        </div>
                                        <button class="main-btn quick-view" onclick="window.location.href='/transaction/detail?tid=<%= recently[i].tid %>'"><i class="fa fa-search-plus"></i> Quick view</button>
                                        <% if (recently[i].preview == null){%>
                                        <img src="/images/transactions/default.png" alt="">
                                        <%}else{%>
                                        <img src="<%=recently[i].preview%>" alt="">
                                        <%}%>
                                    </div>
                                    <div class="product-body">
                                        <h3 class="product-price">$<%=recently[i].price %></h3>
                                        <div class="product-rating">
                                            <p><strong><i class="fa fa-thumbs-up"></i> </strong><%=recently[i].likes %><p>
                                        </div>
                                        <h2 class="product-name"><a href="/transaction/detail?tid=<%= recently[i].tid %>"><%=recently[i].gamename %></a></h2>
                                        <div class="product-btns">
                                            <button class="main-btn icon-btn" onclick="window.location.href='/transaction/likes?tid=<%= recently[0].tid  %>'"><i class="fa fa-thumbs-up"></i></button>
                                            <button class="primary-btn add-to-cart"><i class="fa fa-heart"></i> Add to Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
							
							<!-- /Product Single -->
