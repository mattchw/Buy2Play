<% include include/header.ejs %>

<div class="page-header text-center">
    <h1><span class="fa fa-check-square"></span> <%= title%></h1>
    
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span>user information</h3>
                <div class="container">
                    <img src="/images/users/default.jpg" class="img-responsive img-circle">
                </div>
                <p>
                    <strong>id</strong>:<%= data[0].id  %>
                    <br>
                    <strong>username</strong>:<%= data[0].username  %>
                    <br>
                    <strong>email</strong>:<%= data[0].email  %>
                </p>
                <h4>Transaction</h4>
                <table class="table table-hover">
                    <tr >
                        <th>tid</th>
                        <th>gamename</th>
                        <th>platform</th>
                        <th>price</th>
                        <th>date</th>
                        <th></th>
                    </tr>
                <% for ( var i = 0 ; i < transaction.length ; i++){ %>
                <tr> 
                    <td>
                        <%= transaction[i].tid  %>
                    </td>
                    <td>
                        <%= transaction[i].gamename  %>
                    </td>
                    <td>
                        <%= transaction[i].platform  %>
                    </td>
                    <td>
                        <%= transaction[i].price  %>
                    </td>
                    <td>
                        <%= transaction[i].date  %>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-xs" onclick="window.location.href='/transaction/detail?tid=<%= transaction[i].tid  %>'">detail</button>
                    </td>
                </tr>
                <% } %>
                </table>
            </div>
        </div>
    </div>
</div>
<% include include/footer.ejs %>