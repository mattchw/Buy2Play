<% include include/header.ejs %>

<div class="page-header text-center">
    <h1><span class="fa fa-check-square"></span> <%= title%></h1>
    
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <center>
                <h3><span class="fa fa-user"></span><%= user.username  %></h3>
                <br>
                <h4>Your Wishlist</h4>
                <table class="table table-hover">
                    <tr >
                        <th>tid</th>
                        <th>Gamename</th>
                        <th>Platform</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                <% for ( var i = 0 ; i < data.length ; i++){ %>
                <tr> 
                    <td>
                        <%= data[i].tid  %>
                    </td>
                    <td>
                        <%= data[i].gamename  %>
                    </td>
                    <td>
                        <%= data[i].platform  %>
                    </td>
                    <td>
                        $<%= data[i].price  %>
                    </td>
                    <td>
                        <%= data[i].date  %>
                    </td>
                    <td>
                        <button class="btn btn-info btn-xs" onclick="window.location.href='/transaction/detail?tid=<%= data[i].tid  %>'">Detail</button>
                        <button class="btn btn-warning btn-xs" onclick="window.location.href='/wishlist/delete?tid=<%= data[i].tid  %>'">Delete</button>
                    </td>
                </tr>
                <% } %>
                </table>
                </center>
            </div>
        </div>
    </div>
</div>

<% include include/footer.ejs %>